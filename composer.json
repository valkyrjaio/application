{
  "name"              : "valkyrja/application",
  "type"              : "project",
  "description"       : "The Valkyrja Application.",
  "homepage"          : "http://www.valkyrja.io",
  "keywords"          : [
    "application",
    "valkyrja"
  ],
  "license"           : "MIT",
  "authors"           : [
    {
      "name"  : "Melech Mizrachi",
      "email" : "melechmizrachi@valkyrja.io"
    }
  ],
  "require"           : {
    "php"               : ">=7.4",
    "valkyrja/valkyrja" : "1.0.*"
  },
  "require-dev"       : {
    "fzaninotto/faker" : "~1.4",
    "mockery/mockery"  : "0.9.*",
    "phpunit/phpunit"  : "~6.1"
  },
  "autoload"          : {
    "psr-4" : {
      "App\\"    : "app/",
      "config\\" : "config/",
      "env\\"    : "env/",
      "tests\\"  : "tests/"
    }
  },
  "scripts"           : {
    "post-root-package-install" : [
      "php -r \"file_exists('env/Env.php') || copy('env/Env.example.php', 'env/Env.php');\"",
      "php -r \"file_exists('env/EnvConsole.php') || copy('env/EnvConsole.example.php', 'env/EnvConsole.php');\"",
      "php -r \"file_exists('env/EnvTest.php') || copy('env/EnvTest.example.php', 'env/EnvTest.php');\""
    ]
  },
  "suggest"           : {
    "guzzlehttp/guzzle"          : "Required for use with Valkyrja Client (6.5.2).",
    "league/flysystem"           : "Required for use with Valkyrja FileSystem (1.0.63).",
    "league/flysystem-aws-s3-v3" : "Required for use with Valkyrja FileSystem S3 (1.0.23)",
    "monolog/monolog"            : "Required for use with Valkyrja Logger (1.3.1).",
    "predis/predis"              : "Required for use with Redis Valkyrja Cache (1.1.1).",
    "valkyrja/valkyrja-twig"     : "Optional Valkyrja component for using Twig Templating (^1.0).",
    "ext-sodium"                 : "For Crypt functionality (*)",
    "ext-pdo"                    : "For ORM functionality (*)"
  },
  "minimum-stability" : "dev",
  "extra"             : {
    "branch-alias" : {
      "dev-master" : "1.0-dev"
    }
  }
}
