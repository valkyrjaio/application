{
  "name"              : "valkyrja/application",
  "type"              : "project",
  "description"       : "The Valkyrja Application.",
  "homepage"          : "http://www.valkyrja.io",
  "keywords"          : [
    "application",
    "valkyrja"
  ],
  "license"           : "MIT",
  "authors"           : [
    {
      "name"  : "Melech Mizrachi",
      "email" : "mel@valkyrja.io"
    }
  ],
  "require"           : {
    "php"               : "^8.0",
    "valkyrja/valkyrja" : "^1.0.0",
    "monolog/monolog"   : "^2.1.0"
  },
  "require-dev"       : {
    "filp/whoops"      : "^2.7.3",
    "fzaninotto/faker" : "^1.9.1",
    "mockery/mockery"  : "^1.4.1",
    "phpunit/phpunit"  : "^9.2.6"
  },
  "autoload"          : {
    "psr-4" : {
      "App\\"    : "app/",
      "Config\\" : "config/",
      "env\\"    : "env/",
      "tests\\"  : "tests/"
    }
  },
  "scripts"           : {
    "post-root-package-install" : [
      "php -r \"file_exists('env/Env.php') || copy('env/Env.example.php', 'env/Env.php');\"",
      "php -r \"file_exists('env/EnvConsole.php') || copy('env/EnvConsole.example.php', 'env/EnvConsole.php');\"",
      "php -r \"file_exists('env/EnvTest.php') || copy('env/EnvTest.example.php', 'env/EnvTest.php');\""
    ]
  },
  "suggest"           : {
  },
  "minimum-stability" : "dev",
  "extra"             : {
    "branch-alias" : {
      "dev-master" : "1.x-dev"
    }
  }
}
